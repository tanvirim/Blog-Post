<%- include("partials/header"); -%>
 
 <h1>Home</h1>
  <p>
    <%= homeContent %>
  </p>
  
  
  <% postDetailsArray.forEach((post)=>{ %>
    <h1> <%= post.postTitle %> </h1>
    <% if(post.postContent.length>500){ %>
      <p>  <%= post.postContent.substring(0,500)+"  ..." %> <a href="post/<%=post.postTitle%>">read more</a> </p>
      <%}else{ %>
      <p>  <%= post.postContent %> </p>
      <% } %>
    <% }) %>



  <%- include("partials/footer"); -%>